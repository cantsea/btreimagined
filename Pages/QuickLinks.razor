@page "/quicklinks"

<PageTitle>Quick Links</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-6">
    <MudText Typo="Typo.h4" GutterBottom="true" Align="Align.Center">
        cantseasharp's Unofficial Server Quick Links!
    </MudText>

    <!-- Discord Card -->
    <MudPaper Elevation="1" Class="p-4 mb-4">
        <MudText Typo="Typo.h6" GutterBottom="true">Join the Server Discord</MudText>
        <MudButton Href="https://discord.gg/Mhjdn4znV2"
                   Target="_blank"
                   Variant="Variant.Filled"
                   EndIcon="@Icons.Custom.Brands.Discord"
                   Color="Color.Primary"
                   FullWidth="true">
            Join Discord
        </MudButton>
    </MudPaper>

    <!-- Store Card -->
    <MudPaper Elevation="1" Class="p-4 mb-4">
        <MudText Typo="Typo.h6" GutterBottom="true">Official Server Store</MudText>
        <MudButton Href="https://store.saltymc.org/"
                   Target="_blank"
                   Variant="Variant.Filled"
                   Color="Color.Secondary"
                   FullWidth="true">
            Support the Server!
        </MudButton>
    </MudPaper>

    <!-- Voting Card -->
    <MudPaper Elevation="1" Class="p-4 mb-4">
        <MudText Typo="Typo.h6" GutterBottom="true">Vote for In-Game Rewards</MudText>
        <MudStack Spacing="2" Direction="Row" Wrap="Wrap.Wrap">
            <MudButton Href="https://minecraftservers.org/vote/673166"
                       Target="_blank"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                Vote 1
            </MudButton>
            <MudButton Href="https://minecraft-server-list.com/server/511458/vote/"
                       Target="_blank"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                Vote 2
            </MudButton>
            <MudButton Href="https://best-minecraft-servers.co/server-saltymc.28561/vote"
                       Target="_blank"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                Vote 3
            </MudButton>
            <MudButton Href="https://minecraftbestservers.com/server-saltymc.5099/vote"
                       Target="_blank"
                       Variant="Variant.Filled"
                       Color="Color.Primary">
                Vote 4
            </MudButton>
        </MudStack>
    </MudPaper>
</MudContainer>


