@page "/"
@using MudBlazor

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-6">
    <MudText Typo="Typo.h4" GutterBottom="true" Align="Align.Center">
        cantseasharp's Unofficial Server Landing Page!
    </MudText>

    <!-- YouTube Embed Section -->
    <MudPaper Elevation="1" Class="p-4 mt-4">
        <MudText Typo="Typo.h6" GutterBottom="true">Watch Our Latest Server Trailer</MudText>
        <MudAspectRatio AspectRatio="16 / 9">
            <iframe width="560" height="315"
                    src="https://www.youtube.com/embed/YOUR_VIDEO_ID"
                    title="YouTube video player"
                    frameborder="0"
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                    allowfullscreen>
            </iframe>
        </MudAspectRatio>
    </MudPaper>
</MudContainer>
